<article class="module width_full">
  <header><h3><%=legenda%></h3></header>
  <div class="module_content"><%= form_for @setting,:url=>escola_ano_letivo_settings_url(@escola,@ano_letivo) do |f| %>
  <% if @setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@setting.errors.count, "erro impede","erros impedem") %> este setting de ser cadastrado:</h2>

      <ul>
      <% @setting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%=f.hidden_field :entidade_id,:value=>current_user.entidade_id%>

  <%=f.hidden_field :escola_id,:value=>@escola.id%>

  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :tipo_config %><br /><br />
        <%= f.select :tipo_config,Setting::TIPO,:prompt=>"Indique o tipo de configuraÃ§Ã£o",:style=>"width:92%;" %>
    <br />
  </fieldset>
  <%=observe_field :setting_tipo_config, :url => "/settings/tipo",
      :frequency => 0.25,
      :update => :objeto,
      :with => 'tipo'%>


   <div id='objeto'></div>



<div id='auto_complete'></div>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label "Tipo de Temporalidade" %><br /><br />
        <%= f.select :tipo_temporalidade,Setting::TEMPO,:style=>"width:92%;" %>

  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label "temporalidade"%><br /><br />
        <%= f.text_field :temporalidade,:style=>"width:92%;" %>

  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :ativo %><br /><br />

    <%= f.check_box :ativo,:style=>"width:40%;" %>

    <br /><br />
  </fieldset>
<div class="clear"></div>
</div>
        <footer>
				<div class="submit_link">
					<%=f.submit "Salvar",:class=>"alt_btn" %> ou <%=link_to 'Cancelar',:back%>
				</div>
			</footer>
<% end %>
</article>
