<%content_for :links do%>
		<%=link_to "Escolas",escola_ano_letivo_settings_path%><div class="breadcrumb_divider"></div><%=link_to "Configurações",escola_ano_letivo_settings_path%><div class="breadcrumb_divider"></div><a class="current">Editando Configuração</a>

<%end%>
<article class="module width_full">
<header><h3>Editando configuração</h3></header>
<div class="module_content">


<%= form_for @setting,:url=>escola_ano_letivo_setting_url do |f| %>
  <% if @setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@setting.errors.count, "erro impede","erros impedem") %> este setting de ser cadastrado:</h2>

      <ul>
      <% @setting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%=f.hidden_field :escola_id,:value=>@escola.id%>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :objeto_id %><br />
        <%= f.text_field :objeto_id,:disabled=>true,:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :tipo_config %><br />
        <%= f.text_field :tipo_config,:style=>"width:92%;",:disabled=>true %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :ativo %><br />
    
    <%= f.check_box :ativo,:style=>"width:40%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :temporalidade %><br />
        <%= f.text_field :temporalidade,:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :tipo_temporalidade %><br />
        <%= f.text_field :tipo_temporalidade,:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :finalizado %><br />
    
    <%= f.check_box :finalizado,:style=>"width:40%;" %>
    
  </fieldset>
<div class="clear"></div>
</div>
        <footer>
				<div class="submit_link">
					<%=f.submit "Salvar",:class=>"alt_btn" %> ou <%=link_to 'Cancelar',:back%>
				</div>
			</footer>
<% end %>
</article>

