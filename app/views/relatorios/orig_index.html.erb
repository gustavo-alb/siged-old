<%content_for :titulo do%>
  Relatorios
  <div class="input-group col-md-4 pull-right" style="margin-right: 20px;">
    <%= search_form_for @q do |f|%>
      <%= f.search_field :nome_cont,:class=>"form-control input-lg"%>
      <span class="input-group-btn">
        <%= button_tag(type: 'submit', class: "btn btn-info btn-lg") do %>
          <span class="glyphicon glyphicon-search"></span>
          <% end %>
        </span>
      </div>
      <%end%>
      <%= link_to "Criar",new_relatorio_path,:class=>"btn btn-primary"%>
      <%end%>
      <table class="table table-striped tabela-colapsavel">
        <thead>
          <tr>

              <th>index</th>

              <th>show</th>

          </tr>
        </thead>
        <tbody>
          <% @relatorios.each_with_index do |r,i| %>



          <tr>

              <td><%= r.index%></td>

              <td><%= r.show%></td>

            <td>
              <%= link_to "Editar", edit_relatorio_path(r),:class=>"btn btn-primary btn-xs"%>
      <%= link_to "Visualizar",relatorio_path(r),:class=>"btn btn-primary btn-xs"%>
      <%= link_to "Apagar", relatorio_path(r),:class=>"btn btn-danger btn-xs",:method=>:delete,:confirm=>"Tem Certeza?"%>
      </td>
          </tr>
          <% end%>
        </tbody>
      </table>
      <%= will_paginate @relatorio%>
