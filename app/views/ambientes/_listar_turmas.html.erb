<table class="tablesorter" cellspacing="0">
<thead>
<tr>
<th>Turno</th>
<th>Ambiente</th>
<th>Série</th>
<th>Matriz Curricular</th>
<th>Ações</th>
</tr>
</thead>
<tbody>
<%@turmas.each do |t|%>
<tr>
<td><%=t.turno%></td>
<td><%=t.ambiente.nome%></td>
<td><%=detalhes(t.serie)%></td>
<td><%=cod(t.matriz)%></td>
<td><%=link_to "Remover Turma", escola_ambiente_excluir_turma_path(@escola,@ambiente,:turma_id=>t.id),:confirm=>"Tem certeza que deseja remover a turma",:remote=>true%></td>
</tr>
<%end%>
</tbody>
</table>