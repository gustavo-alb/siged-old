<%content_for :titulo do%>
  Niveis_ensinos
  
  <div class="input-group col-md-4 pull-right" style="margin-right: 20px;">
    <%= search_form_for @q do |f|%>
      <%= f.search_field :nome_cont,:class=>"form-control input-lg"%>
      <span class="input-group-btn">
        <%= button_tag(type: 'submit', class: "btn btn-info btn-lg") do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
      </span>
    </div>
  <%end%>
  <%= link_to "Criar",new_niveis_ensino_path,:class=>"btn btn-primary"%>
<%end%>
<table class="table table-striped tabela-colapsavel">
  <thead>
    <tr>
      <th>nome</th>
      <th>codigo</th>
    </tr>
  </thead>
  <tbody>
    <% @niveis_ensinos.each_with_index do |n,i| %>
      <tr>
        <td><%= n.nome%></td>
        <td><%= n.codigo%></td>
        <td>
          <%= link_to "Editar", edit_niveis_ensino_path(n),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Visualizar",niveis_ensino_path(n),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Apagar", niveis_ensino_path(n),:class=>"btn btn-danger btn-xs",:method=>:delete,:confirm=>"Tem Certeza?"%>
        </td>
      </tr>
    <% end%>
  </tbody>
</table>
<%= will_paginate @niveis_ensino,renderer: BootstrapPagination::Rails%>