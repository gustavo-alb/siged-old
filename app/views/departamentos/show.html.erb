<%model_class = Departamento%>
<%content_for :titulo do%>
  Detalhes de <%= "#{@departamento.sigla}/#{@orgao.sigla}"%>
<%end%>
<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @departamento.nome %></dd>
  <dt><strong>Sigla:</strong></dt>
  <dd><%= @departamento.sigla %></dd>
  <dt><strong>Orgao:</strong></dt>
  <dd><%= detalhes(@departamento.orgao) %></dd>
  <dt><strong>Criado em:</strong></dt>
  <dd><%= @departamento.created_at.strftime("%d/%m/%Y, %T") %></dd>
  <dt><strong>Última atualização:</strong></dt>
  <dd><%= @departamento.updated_at.strftime("%d/%m/%Y, %T")%></dd>
  <dt><strong>Departamento pai:</strong></dt>
  <dd><%= detalhes(@departamento.departamento_pai) %></dd>
  <dt><strong>Telefone:</strong></dt>
  <dd><%= @departamento.telefone %></dd>
</dl>
<%= link_to 'Voltar', orgao_departamentos_path(@orgao), :class => 'btn btn-default'  %>
<%= link_to 'Editar', edit_orgao_departamento_path(@orgao,@departamento), :class => 'btn btn-default' %>
<%= link_to "Apagar",
              orgao_departamento_path(@orgao,@departamento),
              :method => 'delete',
              :data => { :confirm => "Você tem certeza?" },
              :class => 'btn btn-danger' %>