<%content_for :titulo do%>
  Departamentos do(a) <%= @orgao.sigla%>
  <div class="input-group col-md-4 pull-right" style="margin-right: 20px;">
    <%= search_form_for @q do |f|%>
      <%= f.search_field :nome_cont,:class=>"form-control input-lg"%>
      <span class="input-group-btn">
        <%= button_tag(type: 'submit', class: "btn btn-info btn-lg") do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
      </span>
    </div>
  <%end%>
  <%= link_to "Criar",new_departamento_path,:class=>"btn btn-primary"%>
<%end%>
<table class="table table-striped tabela-colapsavel">
  <thead>
    <tr>
      <th>nome</th>
      <th>sigla</th>
    </tr>
  </thead>
  <tbody>
    <% @departamentos.each_with_index do |d,i| %>
      <tr>
        <td><%= d.nome%></td>
        <td><%= d.sigla%></td>
        <td>
          <%= link_to "Editar", edit_orgao_departamento_path(@orgao,d),:class=>"btn btn-primary btn-xs"%>
          <%= link_to 'Gerenciar Func.', funcionarios_pontos_path(:objeto_id=>d.id,:tipo=>'departamento'),:class=>"btn btn-primary btn-xs" %>
          <%= link_to "Visualizar",orgao_departamento_path(@orgao,d),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Apagar", orgao_departamento_path(@orgao,d),:class=>"btn btn-danger btn-xs",:method=>:destroy,:confirm=>"Tem Certeza?"%>
        </td>
      </tr>
    <% end%>
  </tbody>
</table>
<%= will_paginate @departamento,renderer: BootstrapPagination::Rails%>