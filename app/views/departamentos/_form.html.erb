<article class="module width_full">
<header><h3>Cadastrando Departamentos</h3></header>
<div class="module_content">


<%= form_for @departamento,:url=>orgao_departamentos_url(@orgao) do |f| %>
  <% if @departamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@departamento.errors.count, "erro impede","erros impedem") %> este departamento de ser cadastrado:</h2>

      <ul>
      <% @departamento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>

      <%=f.hidden_field :entidade_id,:value=>current_user.entidade_id%>

      </ul>
    </div>
  <% end %>
 <%=f.hidden_field :orgao_id,:value=>@orgao.id%>
   <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :departamento_pai %><br />
        <%#= f.select :pai_id,@pais,:prompt=>"Indique o departamento pai",:style=>"width:92%;" %>

  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :nome %><br />
        <%= f.text_field :nome,:style=>"width:92%;" %>

  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :sigla %><br />
        <%= f.text_field :sigla,:style=>"width:92%;" %>

  </fieldset>

  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :hierarquia %><br />
        <%= f.text_field :hierarquia,:style=>"width:92%;" %>

  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :telefone %><br />
        <%= f.text_field :telefone,:style=>"width:92%;" %>

  </fieldset>
  
   <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :telefone %><br />
        <%= f.text_field :telefone,:style=>"width:92%;" %>

  </fieldset>
<div class="clear"></div>
</div>
        <footer>
				<div class="submit_link">
					<%=f.submit "Salvar",:class=>"alt_btn" %> ou <%=link_to 'Cancelar',:back%>
				</div>
			</footer>
<% end %>
</article>
