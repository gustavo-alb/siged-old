<article class="module width_full">
  <header><h3><%=legenda%></h3></header>
  <div class="module_content"><%= form_for(@ponto_diario) do |f| %>
  <% if @ponto_diario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ponto_diario.errors.count, "erro impede","erros impedem") %> este ponto_diario de ser cadastrado:</h2>

      <ul>
      <% @ponto_diario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :ip_assinatura %><br />
        <%= f.text_field :ip_assinatura,:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :data_assinatura %><br />
        <%= f.calendar_date_select :data_assinatura,:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :user_id %><br />
        <%= f.text_field :user_id,:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :pessoa_id %><br />
        <%= f.text_field :pessoa_id,:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :funcionario_id %><br />
        <%= f.text_field :funcionario_id,:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :ponto_id %><br />
        <%= f.text_field :ponto_id,:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :assinado %><br />
    
    <%= f.check_box :assinado,:style=>"width:40%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :valido %><br />
    
    <%= f.check_box :valido,:style=>"width:40%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :evento_id %><br />
        <%= f.text_field :evento_id,:style=>"width:92%;" %>
    
  </fieldset>
<div class="clear"></div>
</div>
        <footer>
				<div class="submit_link">
					<%=f.submit "Salvar",:class=>"alt_btn" %> ou <%=link_to 'Cancelar',:back%>
				</div>
			</footer>
<% end %>
</article>

