<article class="module width_full">
  <header><h3><%=legenda%></h3></header>
  <div class="module_content"><%= form_for(@quadro) do |f| %>
  <% if @quadro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quadro.errors.count, "erro impede","erros impedem") %> este quadro de ser cadastrado:</h2>

      <ul>
      <% @quadro.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%=f.hidden_field :entidade_id,:value=>current_user.entidade_id%>

  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :codigo %><br />
        <%= f.text_field :codigo,:style=>"width:92%;" %>

  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :nome %><br />
        <%= f.text_field :nome,:style=>"width:92%;" %>

  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :esfera_id %><br />
        <%= f.select :esfera_id,@esferas,:prompt=>"Selecione a esfera",:style=>"width:92%;" %>

  </fieldset>

 <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :poder %><br />
        <%= f.select :poder_id,@poderes,:prompt=>"Selecione o poder",:style=>"width:92%;" %>

  </fieldset>

   <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :lei %><br />
        <%= f.text_field :lei,:style=>"width:92%;" %>

  </fieldset>

    <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :data_da_lei %><br />
        <%= f.calendar_date_select :data_lei,:style=>"width:38%;",:year_range => 91.years.ago..0.years.ago %>

  </fieldset>

<div class="clear"></div>
</div>
        <footer>
				<div class="submit_link">
					<%=f.submit "Salvar",:class=>"alt_btn" %> ou <%=link_to 'Cancelar',:back%>
				</div>
			</footer>
<% end %>
</article>
