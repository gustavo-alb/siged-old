<%content_for :titulo do%>
  Referencia/Nivel
  
  
  <div class="input-group col-md-4 pull-right" style="margin-right: 20px;">
    <%= search_form_for @q do |f|%>
      <%= f.search_field :nome_cont,:class=>"form-control input-lg"%>
      <span class="input-group-btn">
        <%= button_tag(type: 'submit', class: "btn btn-info btn-lg") do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
      </span>
    </div>
  <%end%>
  <%= link_to "Criar",new_referencia_nivel_path,:class=>"btn btn-primary"%>
<%end%>
<table class="table table-striped tabela-colapsavel">
  <thead>
    <tr>
      <th>nome</th>
      <th>codigo</th>
      <th>vencimento_id</th>
      <th>entidade_id</th>
    </tr>
  </thead>
  <tbody>
    <% @referencia_niveis.each_with_index do |r,i| %>
      <tr>
        <td><%= r.nome%></td>
        <td><%= r.codigo%></td>
        <td><%= r.vencimento_id%></td>
        <td><%= r.entidade_id%></td>
        <td>
          <%= link_to "Editar", edit_referencia_nivel_path(r),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Visualizar",referencia_nivel_path(r),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Apagar", referencia_nivel_path(r),:class=>"btn btn-danger btn-xs",:method=>:delete,:confirm=>"Tem Certeza?"%>
        </td>
      </tr>
    <% end%>
  </tbody>
</table>
<%= will_paginate @referencia_nivel%>