<article class="module width_full">
<header><h3>Especificação de Lotacao</h3></header>
<div class="module_content">
<div id="tabs1" class="tabset">
<%= form_for @lotacao do |f| %>
<fieldset>
    <%= label :especificar_lotacao,"Ambientes Físicos" %><br /><br />
    <%= select :lotacao,:ambiente_id,@escola_lotacao.ambientes.salas_ambiente.all.collect{|a|[a.nome,a.id]},:style=>"width:92%;",:prompt=>"Selecione a Sala Ambiente" %>
</fieldset>
<%=params[:pessoa_id]%>
<div class='submit_link'>
<%=f.submit "Salvar",:class=>"alt_btn" %>
</div>
<%end%>

</div>
</article>
