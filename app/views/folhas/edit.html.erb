<article class="module width_full">
<header><h3>Editando <%=@folha.nome%></h3></header>
<div class="module_content">


<%= form_for @folha,:url=> quadro_folha_url do |f| %>
  <% if @folha.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@folha.errors.count, "erro impede","erros impedem") %> este folha de ser cadastrado:</h2>

      <ul>
      <% @folha.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%=f.hidden_field :quadro_id,:value=>@quadro.id%>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :codigo %><br />
        <%= f.text_field :codigo,:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :nome %><br />
        <%= f.text_field :nome,:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :esfera_id %><br />
        <%= f.select :esfera_id,@esferas,:prompt=>"Selecione a esfera",:style=>"width:92%;" %>
    
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :poder_id %><br />
        <%= f.select :poder_id,@poderes,:prompt=>"Selecione o poder",:style=>"width:92%;" %>
    
  </fieldset>
<div class="clear"></div>
</div>
        <footer>
				<div class="submit_link">
					<%=f.submit "Salvar",:class=>"alt_btn" %> ou <%=link_to 'Cancelar',:back%>
				</div>
			</footer>
<% end %>
</article>

