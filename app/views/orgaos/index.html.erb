<%content_for :titulo do%>
  Orgoes
  
  
  
  
  
  <div class="input-group col-md-4 pull-right" style="margin-right: 20px;">
    <%= search_form_for @q, :url=>orgaos_path do |f|%>
      <%= f.search_field :nome_cont,:class=>"form-control input-lg"%>
      <span class="input-group-btn">
        <%= button_tag(type: 'submit', class: "btn btn-info btn-lg") do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
      </span>
    </div>
  <%end%>
  <%= link_to "Criar",new_orgao_path,:class=>"btn btn-primary"%>
<%end%>
<table class="table table-striped tabela-colapsavel">
  <thead>
    <tr>
      <th>codigo</th>
      <th>nome</th>
      <th>sigla</th>
      <th>responsavel_id</th>
    </tr>
  </thead>
  <tbody>
    <% @orgaos.each_with_index do |o,i| %>
      <tr>
        <td><%= o.codigo%></td>
        <td><%= o.nome%></td>
        <td><%= o.sigla%></td>
        <td><%= o.responsavel_id%></td>
        <td>
          <%= link_to "Editar", edit_orgao_path(o),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Departamentos", orgao_departamentos_path(o),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Visualizar",orgao_path(o),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Apagar", orgao_path(o),:class=>"btn btn-danger btn-xs",:method=>:delete,:confirm=>"Tem Certeza?"%>
        </td>
      </tr>
    <% end%>
  </tbody>
</table>
<%= will_paginate @orgao,renderer: BootstrapPagination::Rails%>