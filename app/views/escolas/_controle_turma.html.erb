  <table class="tablesorter" cellspacing="0" style='overflow-y: scroll;'>
            <thead>
              <tr>
                <th>Matrícula</th>
                <th>Funcionário</th>
                <th>Cargo</th>
                <th>Disciplina</th>
                <th title="Regência Semanal Disponível">RSD*</th>
                <th>Horas-aula</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @especificacoes.each do |e| %>
              <tr>
               <td><%= e.funcionario.matricula %></td>
               <td><%= detalhes(e.funcionario) %></td>
               <td><%= cargo_resumido(e.funcionario) %></td>
               <td><%= detalhes(e.disciplina)%></td>
               <td title='<%=turmas(e.funcionario)%>'><%= cor_rsd(e.funcionario)%></td>
               <td><%= carencia(e.hora_semanal)%></td>
             </tr>
             <% end %>
           </tbody>
         </table>

         <div class='submit_link'style='margin-right:0px; left:0px; margin-top:316px; height:0px;'>
          <%=link_to "Voltar para a lista de turmas", escola_listar_turmas_path,:remote=>true%>
         </div>