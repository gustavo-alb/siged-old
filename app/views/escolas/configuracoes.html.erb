	<%= f.label :matrizes %><br /><br />
	<% for matriz in @matrizes%>
	<div title="<%=matriz.codigo%>" style="float: left;">
	<%= check_box_tag "escola[matriz_ids][]", matriz.id, @escola.matrizes.include?(matriz) %>
	<%= matriz.codigo %>
	</div>
	<% end %>

</fieldset>
