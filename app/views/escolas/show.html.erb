<%content_for :links do%>
<%=link_to "Escolas",escolas_path%><div class="breadcrumb_divider"></div><a class="current">Detalhes</a>
<%end%>
<article class="module width_3_quarter">
  <header><h3>Detalhes da Escola: <%= @escola.nome_da_escola.titleize%><%= link_to image_tag('icn_config.png',:title=>'Configurações'), escola_configuracoes_path(@escola),:rel=>'facebox',:rev=>"height:300px;width:500px"%></h3></header>
  <div class="module_content">
    <div id="tabs1" class="tabset">
      <% if can? :manage,Escola,:id=>current_user.escola_id%>
      <ul class="tabset_tabs">
        <li><a href="#tab-um">Detalhes</a></li>
        <li><a href="#tab-dois">Quadro funcional</a></li>
        <li><a href="#tab-tres">Turmas</a></li>
        <li><a href="#tab-quatro">Lotações à confirmar</a></li>
      </ul>
      <%end%>
      <div class="tabset_content_container">
        <div id="tab-one" class="tabset_content">
          <p>
            <b>Código:</b>
            <%= @escola.codigo %>
          </p>

          <p>
            <b>Nome:</b>
            <%= @escola.nome_da_escola %>
          </p>

          <p>
            <b>Diretor:</b>
            <%= detalhes(@escola.diretor) %>
          </p>

          <%if !@escola.secretario.nil?%>
          <p>
            <b>Secretário:</b>
            <%= detalhes(@escola.secretario) %>
          </p>
          <%end%>

          <%if !@escola.diretor_adjunto.nil?%>
          <p>
            <b>Diretor Adjunto:</b>
            <%= detalhes(@escola.diretor_adjunto) %>
          </p>
          <%end%>

          <p>
            <b>Tipologia:</b>
            <%= @escola.tipologia %>
          </p>


          <p>
            <b>Rede:</b>
            <%= detalhes(@escola.esfera) %>
          </p>

          <p>
            <b>Zona:</b>
            <%= @escola.zona %>
          </p>

          <p>
            <b>Endereço:</b>
            <%= @escola.endereco %>
          </p>

          <p>
            <b>Cidade:</b>
            <%= @escola.municipio.nome %>
          </p>

          <p>
            <b>Telefone:</b>
            <%= @escola.telefone %>
          </p>

          <p>
            <b>Fax:</b>
            <%= @escola.fax %>
          </p>

          <p>
            <b>Email:</b>
            <%= @escola.email %>
          </p>
        </div>
        <div id="tab-two" class="tabset_content" style='overflow-y: scroll; height: 200px;'>
          <table class="tablesorter" cellspacing="0">
            <thead>
              <tr>
                <th>Matrícula</th>
                <th>Funcionário</th>
                <th>Cargo</th>
                <th title="Regência Semanal Disponível">RSD<sup>(?)</sup></th>
                <th>Ações</th>
                <th colspan=2></th>
              </tr>
            </thead>
            <tbody>
              <% @funcionarios.each do |f| %>
              <tr>
               <td><%= f.matricula %></td>
               <td><%= detalhes(f.pessoa) %></td>
               <td><%= cargo_resumido(f) %></td>
               <td title='<%=turmas(f)%>'><%= cor_rsd(f)%></td>
               <td><%= link_to  image_tag('/images/icn_especificar.png',:title=>"Especificar Lotação"), pessoa_funcionario_lotacao_especificar_lotacao_path(f.pessoa,f,@escola.lotacoes.ativo.find_by_funcionario_id(f.id),@escola),:rel=>"facebox",:rev=>"height:300px;width:500px"%></td>
               <td><%= link_to  image_tag('/images/icn_devolver.png',:title=>"Devolver funcionario"), pessoa_funcionario_lotacao_devolver_funcionario_path(f.pessoa,f,@escola.lotacoes.ativo.find_by_funcionario_id(f.id)),:rel=>"facebox",:rev=>"height:300px;width:500px"  %></td>
             </tr>
             <% end %>
           </tbody>
         </table>
       </div>


       <div id="tab-three" class="tabset_content">
        <%=render :partial=>'turmas'%>
      </div>
      <div id="tab-four" class="tabset_content" style='overflow-y: scroll; height: 200px;'>
        <table class="tablesorter" cellspacing="0">
          <thead>
            <tr>
              <th>Matrícula</th>
              <th>Funcionário</th>
              <th>Cargo</th>
              <th title="Regência Semanal Disponível">RSD<sup>(?)</th>
              <th>Ações</th>
              <th colspan=3></th>
            </tr>
          </thead>
          <tbody>
            <% @encaminhados.each do |f| %>
            <tr>
             <td><%= f.matricula %></td>
             <td><%= detalhes(f.pessoa) %></td>
             <td><%= cargo_resumido(f) %></td>
             <td title='<%=turmas(f)%>'><%= cor_rsd(f)%></td>
             <td><%= link_to  image_tag('/images/pdf.png',:title=>"Carta de Apresentação"), pessoa_funcionario_carta_path(f.pessoa,f,:lotacao=>@escola.lotacoes.ativo.find_by_funcionario_id(f.id).id) %></td>
             <td><%= link_to  image_tag('/images/positivo.png',:title=>"Confirmação de Lotação"), pessoa_funcionario_lotacao_confirmar_lotacao_path(f.pessoa,f,@escola.lotacoes.ativo.find_by_funcionario_id(f.id)),:rel=>"facebox",:rev=>"height:300px;width:500px"  %></td>
             <td><%= link_to  image_tag('/images/icn_deletar.png',:title=>"Cancelar Lotação"), pessoa_funcionario_lotacao_cancelar_lotacao_path(f.pessoa,f,@escola.lotacoes.ativo.find_by_funcionario_id(f.id),:convalidar=>false),:rel=>"facebox",:rev=>"height:300px;width:500px"  %></td>
           </tr>
           <% end %>
         </tbody>
       </table>
     </div>

   </div>
 </div>




</div>
<footer>
  <div class="submit_link">
    <%= link_to "Incluir Turma", escola_incluir_turma_path(@escola),:rel=>"facebox",:rev=>"height:100px;width:600px"%>, 
    <%= link_to 'Editar Escola', edit_escola_path(@escola),:class=>"alt_btn",:type=>"submit"%> ou
    <%= link_to 'Voltar', escolas_path,:type=>"submit" %>
  </div>
</footer>
</article>
