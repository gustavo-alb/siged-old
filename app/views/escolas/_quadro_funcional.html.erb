<%#= pie_chart Escola.where("escolas.id = 2073").joins(:categorias).group("categoria.nome").count, label: "Quantidade" %>
<%#= pie_chart({"Efetivos" => @escola.funcionarios.efetivos.count, "Federais" => @escola.funcionarios.federais.count, "Contratos" => @escola.funcionarios.contratos_adm.count}, credits: [ enabled: true, position: { align: 'left', x: 10}, text: 'Example.com', href: 'http://www.example.com' ])%>
<table class="table table-striped table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>Matrícula</th>
      <th>Funcionário</th>
      <th>Cargo</th>
      <th title="Regência Semanal Disponível">RSD<sup>(?)</sup></th>
      <th>Ações</th>
      <th colspan=3></th>
    </tr>
  </thead>
  <tbody>
    <% @funcionarios.sort_by{|g|g.pessoa.nome}.each do |f| %>
    <tr>
     <td><%= f.matricula %></td>
     <td><%= detalhes(f.pessoa) %></td>
     <td><%= cargo_resumido(f) %></td>
     <td title='<%=turmas(f)%>'><%= cor_rsd(f)%></td>
     <td>
      <div class="btn-group">
       <!-- <button type="button" class="form-control btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown"> -->
       <!-- <i class="fa fa-cogs fa-fw"></i> Escolha <span class="caret"></span> -->
       <!-- </button> -->
       <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-cogs fa-fw"></i>
       Escolha<span class="caret"></span>
      </button>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><%#= link_to  '<i class="fa fa-eye fa-fw"></i> Especificar Lotação Detalhadamente'.html_safe, pessoa_funcionario_lotacao_especificar_lotacao_path(f.pessoa,f,@escola.lotacoes.ativo.find_by_funcionario_id(f.id)),:rel=>"facebox",:rev=>"height:300px;width:500px"%></li>
        <li><%#= link_to '<i class="fa fa-edit fa-fw"></i> Especificar Lotação Massivamente'.html_safe, pessoa_funcionario_lotacao_especificacao_massiva_path(f.pessoa,f,@escola.lotacoes.ativo.find_by_funcionario_id(f.id)),:rel=>"facebox",:rev=>"height:300px;width:500px"%></li>
        <li><%#= link_to '<i class="fa fa-edit fa-fw"></i> Devolver funcionario'.html_safe, pessoa_funcionario_lotacao_devolver_funcionario_path(f.pessoa,f,@escola.lotacoes.ativo.find_by_funcionario_id(f.id)),:rel=>"facebox",:rev=>"height:300px;width:500px"  %></li>
        <li>
          <div id='verificado-<%=f.matricula%>'>
            <%if f.verificado%>
            <%= button_to "Invalidar Funcionário",pessoa_funcionario_desverificar_funcionario_path(f.pessoa,f),:remote=>true,:method=>:post,:class=>'alt_btn_dng'%>
            <%else !f.verificado%>
            <%= button_to "Validar Funcionário",pessoa_funcionario_verificar_funcionario_path(f.pessoa,f),:remote=>true,:method=>:post,:class=>'alt_btn'%>
            <%end%>
          </div>
        </li>
      </ul>
    </div>
  </td>
</tr>
<% end %>
</tbody>
</table>
