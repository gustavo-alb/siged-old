<%model_class = Funcionario%>
<%content_for :titulo do%>
Detalhes de 
<%end%>
<dl class="dl-horizontal">
  <dt><strong>Matricula:</strong></dt>
  <dd><%= @funcionario.matricula %></dd>
  <dt><strong>Cargo:</strong></dt>
  <dd><%= detalhes(@funcionario.cargo) %></dd>
  <%if @funcionario.cargo and @funcionario.cargo.nome=="PROFESSOR"%>  
  <dt><strong>Disciplina</strong></dt>
  <dd><%= detalhes(@funcionario.disciplina_contratacao) %></dd>
  <%end%>

  <dt><strong>Quadro:</strong></dt>
  <dd><%= detalhes(@funcionario.entidade) %></dd>
  <dt><strong>Categoria:</strong></dt>
  <dd><%= detalhes(@funcionario.categoria) %></dd>
  <dt><strong>Referência/Nivel:</strong></dt>
  <dd><%= detalhes(@funcionario.nivel) %></dd>
  
  <dt><strong>Decreto de Nomeação:</strong></dt>
  <dd><%= @funcionario.decreto_nomeacao %></dd>
  <dt><strong>Termo de Posse:</strong></dt>
  <dd><%= detalhes(@funcionario.termo_posse) %></dd>
  <dt><strong>Orgão:</strong></dt>
  <dd><%= detalhes(@funcionario.orgao) %></dd>
  <dt><strong>Admissão:</strong></dt>
  <dd><%= @funcionario.data_nomeacao.to_s_br %></dd>
  <dt><strong>Município de Opção:</strong></dt>
  <dd><%= detalhes(@funcionario.municipio) %></dd>
  <dt><strong>Observacao:</strong></dt>
  <dd><%= detalhes(@funcionario.observacao) %></dd>

</dl>
<%= link_to 'Voltar', pessoa_funcionarios_path(@pessoa), :class => 'btn btn-default'  %>
<%= link_to 'Editar', edit_pessoa_funcionario_path(@pessoa,@funcionario), :class => 'btn btn-default' %>
<%= link_to "Apagar",
pessoa_funcionario_path(@pessoa,@funcionario),
:method => 'delete',
:data => { :confirm => "Você tem certeza?" },
:class => 'btn btn-danger' %>