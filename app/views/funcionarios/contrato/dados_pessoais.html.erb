<%= simple_form_for @pessoa, :url => wizard_path do |f| %>
<div class='col-sm-12 col-md-12 well'>
  <h4 align='center'><b>Dados essenciais</b></h4>
  <div class='col-sm-12 col-md-12 row'>
    <div class='col-sm-9 col-md-9'>
      <%= f.input :nome, input_html: {disabled: true} %>
    </div>
    <div class='col-sm-3 col-md-3 row'>
      <%= f.input :cpf ,:input_html=>{:class=>"cpf"}%>
    </div>
  </div>
  <div class='col-sm-12 col-md-12'>
    <div class='col-sm-3 col-md-3  row'>
      <%= f.input :rg %><%#= f.input :cpf ,:input_html=>{:class=>"cpf"}%>
    </div>
    <div class='col-sm-2 col-md-2'>
      <%= f.input :nascimento,:as=>:string,:input_html=>{:class=>"data"}%>
    </div>
    <div class='col-sm-3 col-md-3'>
      <%= f.input :nacionalidade %>
    </div>
    <div class='col-sm-2 col-md-2'>
      <%= f.input :sexo,:as=>:select,:collection=>["Masculino","Feminino"] %>
    </div>
    <div class='col-sm-2 col-md-2'>
      <%= f.input :estado_civil,:as=>:select,:collection=>["Solteiro(a)","Casado(a)","Divorciado(a)","Viúvo(a)","União Estável"] %>
    </div>
  </div>
  <div class='col-sm-12 col-md-12 row'>
    <hr>
    <div class='col-sm-9 col-md-9'>
      <%= f.input :endereco %>
    </div>
    <div class='col-sm-3 col-md-3 row'>
      <%= f.input :numero %>
    </div>
    <div class='col-sm-6 col-md-6'>
      <%= f.input :complemento %>
    </div>
    <div class='col-sm-6 col-md-6'>
      <%= f.input :bairro %>
    </div>
    <div class='col-sm-6 col-md-6'>
      <%#= f.input :cidade_id,:collection=>@municipios%>
      <%= f.label :cidade_id %>
      <%= f.collection_select :cidade_id, Municipio.all, :id, :nome, {include_blank: true}, id: 'placeholder-example', multiple: false, :style => "width: 100%" %>
    </div>
    <div class='col-sm-3 col-md-3'>
      <%= f.input :uf %>
    </div>
    <div class='col-sm-3 col-md-3 row'>
      <%= f.input :cep,:input_html=>{:class=>"cep"}%>
    </div>
    <div class='col-sm-6 col-md-6'>
      <%= f.input :telefone_celular,:input_html=>{:class=>"celular"}%>
    </div>
    <div class='col-sm-6 col-md-6'>
      <%= f.input :telefone_residencial,:input_html=>{:class=>"telefone"}%>
    </div>
  </div>
</div>
<%= f.submit "Confirmar",:class => 'btn btn-primary' %>
<%= link_to 'Não há nada a ser atualizado', next_wizard_path,:class => 'btn btn-default btn-xs' %>
<% end %>
