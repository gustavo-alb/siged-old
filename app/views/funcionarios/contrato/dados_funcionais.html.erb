<%= simple_form_for @funcionario, :url => wizard_path do |f| %>
<div class='col-sm-12 col-md-12 well'>
  <div class='col-sm-3 col-md-3'>
    <%= f.input :matricula,:label=>"Matrícula"%>
  </div>
  <div class='col-sm-7 col-md-7 row'>
    <%= f.label :cargo_id %>
    <%= f.collection_select :cargo_id, Cargo.all, :id, :nome, {include_blank: true}, id: 'placeholder-example', multiple: false, :style => "width: 100%" %>
  </div>
  <div class='col-sm-2 col-md-2'><%= f.input :data_nomeacao,as: :string,input_html: {class: "data",value: (@funcionario.data_nomeacao.strftime("%d/%m/%Y") if !@funcionario.new_record?)},:label=>"Admissão"%>
  </div>
  <div class='col-sm-12 col-md-12'>
    <div class='col-sm-6 col-md-6 row'>
      <%= f.label "Município de Opção" %>
      <%= f.collection_select :municipio_id, Municipio.all.sort, :id, :nome, {include_blank: true}, id: 'placeholder-example', multiple: false, :style => "width: 100%" %>
    </div>
    <div class='col-sm-6 col-md-6'>
      <%= f.input :nivel_id,as: :select, :collection=>@niveis,:label=>"Referência/Nível" %>
    </div>
  </div>
</div>
<%= f.submit "Confirmar",:class => 'btn btn-primary' %>
<%= link_to 'Não há nada a ser atualizado', next_wizard_path,:class => 'btn btn-default btn-xs' %>
<% end %>
