<%content_for :titulo do%>
Novo Contrato Administrativo
<% end %>
<%= simple_form_for @lotacao, :url=>contratos_revisar_url,:html => { :class => 'form-horizontal' } do |l| %>
<div class='col-sm-12 col-md-12 well'>
	<div class="col-sm-4 col-md-4">
		<%= l.label "Tipo"%>
		<%= l.input :tipo_lotacao, label: false, :as => :radio_buttons_inline, :collection=>@tipos,:checked=>'REGULAR' %>
		<%#= l.input :data_lotacao,:as=>:string,:input_html=>{:class=>"data",:value=>Date.today}, label: "Data" if current_user.role? :chefia_ucolom or current_user.role? :admin%>
		<%#= l.input :data_lotacao,:as=>:hidden,:input_html=>{:class=>"data",:value=>Date.today} if !current_user.role?(:chefia_ucolom)%>
		<%= l.input :data_lotacao,:as=>:string,:input_html=>{:class=>"data",:value=>Date.today}, label: "Data da Lotação" %>
	</div>
	<div class="col-sm-8 col-md-8">
		<div id="destino">
			<%= l.input :natureza,:label=>"Natureza da Lotação",:collection=>@naturezas,:checked=>'REGULAR', item_wrapper_class: 'inline'%>
			<%= l.input :destino_nome,:label=>"Escola",:as=>:autocomplete,:url=>lotacoes_autocomplete_escola_nome_path,:input_html=>{:class=>"string form-control"},:id_element=>"#lotacao_destino_id",:required=>true%>
			<%#= l.input :destino_id,:as=>:hidden%>
			<%= l.input :destino_id,:as=>:hidden,:input_html=>{:id=>"lotacao_destino_id"}%>
			<%= l.input :destino_type,:as=>:hidden,:input_html=>{:value=>"Escola"}%>
		</div>
	</div>
	<%= l.input :usuario_id,:as=>:hidden,:input_html=>{:value=>current_user.id}%>
	<%= l.input :funcionario_id,:as=>:hidden,:input_html=>{:value=>@funcionario.id}%>
	<div class="col-sm-12 col-md-12">
		<%= l.input :motivo,:label=>"Observações",:input_html=>{:size=>"2x3"}%>
	</div>
</div>
<%= simple_fields_for :pessoa do |f|%>
<% @atributos_pessoa.each do |atributo|%>
<%if !@pessoa.send("#{atributo}").blank?%>
<%if (@pessoa.send("#{atributo}").respond_to?(:to_i) and @pessoa.send("#{atributo}").to_i!=0 and atributo!='cpf' and atributo!='rg' and atributo!='pis_pasep' and atributo!='cep')%>
<%= f.input "#{atributo}",:as=>:hidden,:input_html=>{:value=>@pessoa.send("#{atributo}").to_i}%>
<%elsif (@pessoa.send("#{atributo}").respond_to?(:to_i) and @pessoa.send("#{atributo}").to_i==0) or @pessoa.send("#{atributo}").is_a?(Date) or atributo=="cpf" or atributo=="rg" or atributo=="pis_pasep" or atributo=="cep"%>
<%= f.input "#{atributo}",:as=>:hidden,:input_html=>{:value=>@pessoa.send("#{atributo}")}%>
<%end%>
<%end%>
<%end%>
<%end%>

<%= simple_fields_for :funcionario do |f|%>
<% @atributos_funcionario.each do |atributo|%>
<%if !@funcionario.send("#{atributo}").blank?%>
<%if (@funcionario.send("#{atributo}").respond_to?(:to_i) and @funcionario.send("#{atributo}").to_i==0) or @funcionario.send("#{atributo}").is_a?(Date)%>
<%= f.input "#{atributo}",:as=>:hidden,:input_html=>{:value=>@funcionario.send("#{atributo}")}%>
<%elsif (@funcionario.send("#{atributo}").respond_to?(:to_i) and @funcionario.send("#{atributo}").to_i!=0)%>
<%= f.input "#{atributo}",:as=>:hidden,:input_html=>{:value=>@funcionario.send("#{atributo}").to_i}%>
<%end%>
<%end%>
<%end%>
<%end%>

<%if @lotacao.errors%>
<% @lotacao.errors.each do |e|%>
<%=e%>
<%end%>
<%end%>


<%= l.button :submit, :class => 'btn-primary' %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
contratos_index_path, :class => 'btn btn-default' %>
<% end %>
