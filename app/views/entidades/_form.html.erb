<article class="module width_full">
  <header><h3><%=legenda%></h3></header>
  <div class="module_content"><%= form_for(@entidade) do |f| %>
  <% if @entidade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entidade.errors.count, "erro impede","erros impedem") %> este entidade de ser cadastrado:</h2>

      <ul>
      <% @entidade.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :nome %><br />
        <%= f.text_field :nome,:style=>"width:92%;" %>

  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :sigla %><br />
        <%= f.text_field :sigla,:style=>"width:92%;" %>

  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :esfera_id %><br />
        <%= f.select :esfera_id,@esferas,:style=>"width:92%;",:prompt=>true %>

  </fieldset>
<div class="clear"></div>
</div>
        <footer>
				<div class="submit_link">
					<%=f.submit "Salvar",:class=>"alt_btn" %> ou <%=link_to 'Cancelar',:back%>
				</div>
			</footer>
<% end %>
</article>
