<%content_for :links do%>
		<a class="current">Séries</a>
<%end%>
<article class="module width_3_quarter">
		<header><h3 class="tabs_involved">Listando séries</h3>
		<ul class="tabs">
		</ul>
		</header>
    
		
<table class="tablesorter" cellspacing="0">
<thead>
  <tr>
    <th>Nome</th>
    <th>Codigo</th>
    <th colspan=3>Ações</th>
  </tr>
</thead>
<tbody>
<% @series.each do |serie| %>
  <tr>
    <td><%= serie.nome %></td>
    <td><%= serie.codigo %></td>
    <td><%= link_to 'Detalhes', niveis_ensino_serie_path(@nivel,serie) %></td>
    <td><%= link_to  image_tag('/images/icn_edit_article.png',:title=>"Editar"), edit_niveis_ensino_serie_path(@nivel,serie) %></td>
    <td><%= link_to  image_tag("/images/icn_trash.png",:title=>"Apagar"), niveis_ensino_serie_path(@nivel,serie), :confirm => 'Tem certeza que deseja Apagar?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>

<footer>
				<div class="submit_link">
				  <%= link_to 'Cadastrar Serie', new_niveis_ensino_serie_path(@nivel),:class=>"alt_btn",:type=>"submit"%> ou
				  <%= link_to 'Voltar', :back,:type=>"submit" %>
				</div>
			</footer>
</article>
