<%content_for :links do%>
		<a class="current">Série</a>
<%end%>
<article class="module width_3_quarter">
		<header><h3 class="tabs_involved">Listando series</h3>
		<ul class="tabs">
   			<%= form_for @search do |f| %>
   			<li><%= f.text_field :busca,:size=>12 %></li>
    		<li><%= image_submit_tag "icn_busca.png" %></li>
			<% end %>
		</ul>
		</header>
    <div class="tab_container">
		<div id="tab1" class="tab_content">
<table class="tablesorter" cellspacing="0">
<thead>
  <tr>
    <th>Nome</th>
    <th>Codigo</th>
    <th colspan=3>Ações</th>
  </tr>
</thead>
<tbody>
<% @series.each do |serie| %>
  <tr>
    <td><%= serie.nome %></td>
    <td><%= serie.codigo %></td>
    <td><%= link_to 'Detalhes', serie %></td>
    <td><%= link_to  image_tag('/images/icn_edit_article.png',:title=>"Editar"), edit_serie_path(serie) %></td>
    <td><%= link_to  image_tag("/images/icn_trash.png",:title=>"Apagar"), serie, :confirm => 'Tem certeza que deseja Apagar?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
</div>
<footer>
				<div class="submit_link">
				  <%= link_to 'Cadastrar Serie', new_serie_path,:class=>"alt_btn",:type=>"submit"%> ou
				  <%= link_to 'Voltar', :back,:type=>"submit" %>
				</div>
			</footer>
</article>
