<%content_for :titulo do%>
  Categorias
  
  <div class="input-group col-md-4 pull-right" style="margin-right: 20px;">
    <%= search_form_for @q do |f|%>
      <%= f.search_field :nome_cont,:class=>"form-control input-lg"%>
      <span class="input-group-btn">
        <%= button_tag(type: 'submit', class: "btn btn-info btn-lg") do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
      </span>
    </div>
  <%end%>
  <%= link_to "Criar",new_categoria_path,:class=>"btn btn-primary"%>
<%end%>
<table class="table table-striped tabela-colapsavel">
  <thead>
    <tr>
      <th>nome</th>
      <th>sigla</th>
      <th>lei</th>
    </tr>
  </thead>
  <tbody>
    <% @categorias.each_with_index do |c,i| %>
      <tr>
        <td><%= c.nome%></td>
        <td><%= c.sigla%></td>
        <td><%= c.lei%></td>
        <td>
          <%= link_to "Editar", edit_categoria_path(c),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Visualizar",categoria_path(c),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Apagar", categoria_path(c),:class=>"btn btn-danger btn-xs",:method=>:delete,:confirm=>"Tem Certeza?"%>
        </td>
      </tr>
    <% end%>
  </tbody>
</table>
<%= will_paginate @categoria%>