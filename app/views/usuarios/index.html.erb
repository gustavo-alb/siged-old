<%content_for :links do%>
        <a class="current">Usuários</a>
<%end%>
<article class="module width_full">
		<header><h4 class="tabs_involved">Usuários do Sistema</h3>
		<ul class="tabs">
		</ul>
		</header>
    <div class="tab_container">
		<div id="tab1" class="tab_content">
<table class="tablesorter" cellspacing="0">
<thead>
  <tr>
    <th>Nome</th>
    <th>Email</th>
    <th>Login</th>
    <th>Orgão</th>
    <th>Departamento</th>
    <th>Papéis</th>
    <th colspan=3>Ações</th>
  </tr>
</thead>
<tbody>
<% @users.each do |usuario| %>
  <tr>
    <td><%= usuario.name %></td>
    <td><%= usuario.email %></td>
    <td><%= usuario.username %></td>
    <td><%= detalhes(usuario.orgao) %>
    <td><%= detalhes(usuario.departamento) %>
    <td style="width: 2%;"><%= roles(usuario) %>
    <td><%= link_to 'Detalhes', usuario %></td>
    <td><%= link_to  image_tag('/images/icn_edit_article.png',:title=>"Editar"), edit_usuario_path(usuario)%></td>
    <td><%= link_to  image_tag("/images/icn_trash.png",:title=>"Apagar"), usuario, :confirm => 'Tem certeza que deseja Apagar?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
</div>
<footer>
				<div class="submit_link">
				  <%= link_to 'Cadastrar usuario', new_usuario_path,:class=>"alt_btn",:type=>"submit"%> ou
				  <%= link_to 'Voltar', :back,:type=>"submit" %>
				</div>
         <div class="submit_link">

        </div>
			</footer>
</article>
