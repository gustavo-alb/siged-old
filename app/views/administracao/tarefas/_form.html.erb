<article class="module width_full">
  <header><h3><%=legenda%></h3></header>
  <div class="module_content"><%= form_for(@administracao_tarefa) do |f| %>
  <% if @administracao_tarefa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@administracao_tarefa.errors.count, "erro impede","erros impedem") %> este administracao_tarefa de ser cadastrado:</h2>

      <ul>
      <% @administracao_tarefa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :objeto %><br />
        <%= f.select :classe,(Administracao::Tarefa::CLASSE).sort!,:prompt=>true,:style=>"width:92%;" %>

  </fieldset>


  <%=observe_field :administracao_tarefa_classe, :url =>'/administracao/tarefas/atributos',
      :on => :onchange,
      :update => :attrib,
      :with => 'classe'%>

  <div id='attrib'></div>



  <div id="arquivo"></div>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :tipo %><br />
        <%= f.text_field :tipo,:style=>"width:92%;" %>

  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :data %><br />
        <%= f.calendar_date_select :data,:start_year=>1970,:order=>[:day,:month,:year],:style=>"width:36%;" %>
<br/><br/>
  </fieldset>
  <fieldset style="width:48%; float:left; margin-right: 1%;">
    <%= f.label :executado %><br />

    <%= f.check_box :executado,:style=>"width:40%;" %>

  </fieldset>
<div class="clear"></div>
</div>
        <footer>
				<div class="submit_link">
					<%=f.submit "Salvar",:class=>"alt_btn" %> ou <%=link_to 'Cancelar',:back%>
				</div>
			</footer>
<% end %>
</article>
