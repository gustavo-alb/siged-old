<%- model_class = Requisicao -%>
<div class="page-header">
  <h1>Requisição #<%=@requisicao.id%></h1>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:funcionario_id) %>:</strong></dt>
  <dd><%= @requisicao.funcionario_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_requisicao) %>:</strong></dt>
  <dd><%= @requisicao.tipo_requisicao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:periodo_id) %>:</strong></dt>
  <dd><%= @requisicao.periodo_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @requisicao.status %></dd>
</dl>
<div class="form-actions">
  <%= link_to "Voltar",
  requisicoes_path(:funcionario=>@requisicao.funcionario.id), :class => 'btn btn-default'  %>
  <%= link_to "Editar",
  edit_requisicao_path(@requisicao), :class => 'btn btn-default' %>
  <%= link_to "Imprimir",
  requisicao_requerimento_path(@requisicao), :class => 'btn btn-mini btn-default' %>
  <%= link_to "Cancelar",
  requisicao_path(@requisicao,:funcionario=>@requisicao.funcionario.id),
  :method => 'delete',
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-danger' %>
</div>