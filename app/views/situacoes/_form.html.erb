<%= simple_form_for @situacao, :html => { :class => 'form-horizontal' } do |f| %>
<%= f.input :nome %>
<%= f.input :cor,:collection=>[["Azul","info"],["Verde","success"],["Amarelo","warning"],["Vermelho","error"]] %>

<%= f.button :submit, :class => 'btn-primary' %>
<%= link_to "Cancelar",
situacoes_path, :class => 'btn btn-default' %>
<% end %>
