<%content_for :links do%>
		<a class="current">Matrizes</a>

<%end%>

<article class="module width_3_quarter">
		<header><h3 class="tabs_involved">Listando matrizes</h3>
		<ul class="tabs">
		</ul>
		</header>
<table class="tablesorter" cellspacing="0">
<thead>
  <tr>
    <th>Código</th>
    <th>Nome</th>
    <th>Ações</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @matrizes.each do |matrize| %>
  <tr>
    <td><%= matrize.codigo %></td>
    <td><%= matrize.nome %></td>
    <td><%= link_to 'Detalhes', matrize %></td>
    <td><%= link_to  image_tag('/images/icn_edit_article.png',:title=>"Editar"), edit_matriz_path(matrize) %></td>
    <td><%= link_to  image_tag("/images/icn_trash.png",:title=>"Apagar"), matrize, :confirm => 'Tem certeza que deseja Apagar?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
<footer>
				<div class="submit_link">
				  <%= link_to 'Cadastrar Matriz', new_matriz_path,:class=>"alt_btn",:type=>"submit"%> ou
				  <%= link_to 'Voltar', :back,:type=>"submit" %>
				</div>
                <div class="submit_link">
                    <%=will_paginate @matrizes%>
                </div>
			</footer>
</article>
