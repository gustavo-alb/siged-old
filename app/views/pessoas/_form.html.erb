<%= simple_form_for @pessoa, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nome %>
  <%= f.input :sexo,:as=>:select,:collection=>["Masculino","Feminino"]%>
  <%= f.input :endereco %>
  <%= f.input :numero %>
  <%= f.input :complemento %>
  <%= f.input :bairro %>
  <%= f.input :telefone_residencial,:input_html=>{:class=>"telefone"}%>
  <%= f.input :telefone_celular,:input_html=>{:class=>"celular"}%>
  <%= f.input :nascimento,:as=>:string,:input_html=>{:class=>"data"}%>
  <%= f.input :naturalidade %>
  <%= f.input :nacionalidade %>
  <%= f.input :cpf ,:input_html=>{:class=>"cpf"}%>
  <%= f.input :rg %>
  <%= f.input :pis_pasep %>
  <%= f.input :cidade_id,:collection=>@municipios%>
  <%= f.input :uf %>
  <%= f.input :estado_civil,:as=>:select,:collection=>["Solteiro(a)","Casado(a)","Divorciado(a)","Viúvo(a)","Relação Estável"] %>
  <%= f.input :cep,:input_html=>{:class=>"cep"}%>
  <%= f.input :email,:as=>:email %>
  <%= f.input :pai %>
  <%= f.input :mae %>



  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pessoas_path, :class => 'btn btn-default' %>
<% end %>
