<div class="col-sm-12 col-md-12" align="left">
  <div class="col-sm-6 col-md-6">
    <h3 align="center">Identificação</h3>
    <p><strong>Nome: </strong><%= nome_e_cpf(@lotacao.funcionario) %></p>
    <p><strong>Cargo: </strong><%= cargo_e_matricula(@lotacao.funcionario)%></p>
    <p><strong>Categoria: </strong><%= enquadramento_funcional(@lotacao.funcionario) %></p>
  </div>
  <div class="col-sm-6 col-md-6">
    <h3 align="center">Servidor</h3>
    <p><strong>Destino :</strong><%= lotacao_atual(@lotacao)%></p>
    <p><strong>Responsável: </strong><%= @lotacao.usuario.name.upcase %></p>
    <p><strong>Data: </strong><%= @lotacao.created_at.strftime("%d/%m/%Y às %H:%M:%S") %></p>
  </div>
</div>

<%= simple_form_for :confirmacao,:url=>pessoa_funcionario_lotacao_salvar_confirmacao_url(@lotacao.funcionario.pessoa,@lotacao.funcionario,@lotacao.id), :html => { :class => 'form-vertical' } do |f| %>
<%= f.input :codigo_barra, input_html: {value: @lotacao.codigo_barra}, as: :hidden %>
<% if @lotacao.finalizada == true %>
<%= link_to "<i class='fa fa-remove fa-fw'></i> Cancelar".html_safe, dashboard_pessoas_path, :class => 'btn btn-default btn-xs' %>
<a class="btn btn-primary" data-toggle='tooltip' data-placement='left' title='Este código de barras já foi confirmado.'><i class='fa fa-meh-o fa-fw'></i> Lotação já confirmada</a>
<% else %>
<%= f.button :submit, :class => 'btn-primary' %>
<% end%>

<% end%>
