<%content_for :titulo do%>
Pessoas
<div class="input-group col-md-4 pull-right" style="margin-right: 20px;">
  <%= search_form_for @q do |f|%>
  <%= f.search_field :nome_or_cpf_or_rg_or_funcionarios_matricula_cont,:class=>"form-control input-lg"%>
  <span class="input-group-btn">
    <%= button_tag(type: 'submit', class: "btn btn-info btn-lg") do %>
    <span class="glyphicon glyphicon-search"></span> 
    <% end %>
  </span>
</div>
<%end%>
<%end%>
<table class="table table-striped tabela-colapsavel">
  <thead>
    <tr>
      <th width='350'>NOME</th>
      <th>CPF</th>
      <th>RG</th>
      <th>NASCIMENTO</th>
      <th>Nº DE FUNC.</th>
    </tr>
  </thead>
  <tbody>
    <%@pessoas.each_with_index do |p,i|%>
    <tr data-toggle="collapse" data-target="#demo<%=i%>" class="accordion-toggle">
      <td width='350'><%= p.nome%></td>
      <td><%= p.cpf%></td>
      <td><%= p.rg%></td>
      <td><%= p.nascimento.to_s_br%></td>
      <td><span class="badge"><%= p.funcionarios.count%></span></td>
    </tr>
    <tr>
      <td colspan="5" class="hiddenRow">
        <div class="accordion-body collapse" id="demo<%=i%>">
        <table style="border-spacing: 10px; border-collapse: separate;  border-width: thin;" border=0>
            <% p.funcionarios.each do |f|%>
            <tr>
              <td><b>MATRICULA:</b></td>
              <td><%= f.matricula%></td>
              <td><b>CARGO:</b></td>
              <td><%= cargo_disciplina(f)%></td>
              <td><b>CATEGORIA:</b></td>
              <td><%= detalhes(f.categoria)%></td>
              <td><b>ADMISSÃO:</b></td>
              <td><%= f.data_nomeacao.to_s_br%></td>
            </tr>
            <% end %>
          </table>
        </div>
      </td>
    </tr>
    <% end%>
  </tbody>
</table>

<%=will_paginate @pessoas%>