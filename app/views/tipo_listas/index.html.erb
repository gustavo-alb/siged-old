<%content_for :links do%>
    <a class="current">Listas</a>

<%end%>
<article class="module width_3_quarter">
		<header><h3 class="tabs_involved">Listas</h3>
		<ul class="tabs">
   			<%= form_for @search do |f| %>
   			<li><%= f.text_field :busca,:size=>12 %></li>
    		<li><%= image_submit_tag "icn_busca.png" %></li>
			<% end %>
		</ul>
		</header>
    <div class="tab_container">
		<div id="tab1" class="tab_content">
<table class="tablesorter" cellspacing="0">
<thead>
  <tr>
    <th>Nome</th>
    <th>Ativo</th>
    <th>Tipo objeto</th>
    <th>Nº de registros</th>
    <th colspan=3>Ações</th>
  </tr>
</thead>
<tbody>
<% @tipo_lista.each do |tipo_lista| %>
  <tr>
    <td><%= link_to tipo_lista.nome,"/tipo_listas/#{tipo_lista.id}/listar"%></td>
    <td><%= sim_nao(tipo_lista.ativo) %></td>
    <td><%= tipo_lista.tipo_objeto %></td>
    <td><%= tipo_lista.pessoas.count %></td>
    <td><%= link_to  image_tag('/images/icn_alert_info.png',:title=>"Relatório"),tipo_lista_relatorio_path(tipo_lista) %>
    <td><%= link_to  image_tag('/images/icn_edit_article.png',:title=>"Editar"), edit_tipo_lista_path(tipo_lista,:protocol => 'https') %></td>
    <td><%= link_to  image_tag("/images/icn_trash.png",:title=>"Apagar"), tipo_lista,:protocol => 'https', :confirm => 'Tem certeza que deseja Apagar?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
</div>
<footer>
				<div class="submit_link">
				  <%= link_to 'Cadastrar Tipo de Lista', new_tipo_lista_path,:class=>"alt_btn",:type=>"submit"%> ou
				  <%= link_to 'Voltar', :back,:type=>"submit" %>
				</div>
				<div class="submit_link">
				</div>
			</footer>

</article>
